{
  "manifest_version": 3,
  "name": "Lead Builder",
  "version": "1.0",
  "description": "Add leads to Google Sheets with a right-click",
  
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "notifications",
    "identity"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "content.js"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Lead Builder"
  },
  
  "icons": {
    "16": "lasso.png",
    "48": "lasso.png", 
    "128": "lasso.png"
  },
  
  "oauth2": {
    "client_id": "703385406742-f9qqm7qcqn0egmkh0j5sumbgsifonpuh.apps.googleusercontent.com", 
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  
  "web_accessible_resources": [
    {
      "resources": ["config.js"],
      "matches": ["<all_urls>"]
    }
  ]
}